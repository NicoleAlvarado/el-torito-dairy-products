---
import { getProductImage } from "@scripts/handleProductCard";
import { Image } from "astro:assets";

type Props = {
    id: string;
    name: string;
    description: string;
};

const { id, name, description } = Astro.props;
---

<article>
    <Image src={getProductImage(id)} alt={`Imagen del producto ${name}`} />
    <div>
        <h5>{name}</h5>
        <p>{description}</p>
    </div>
</article>

<style define:vars={{ gridArea: id }}>
    article {
        position: relative;
        min-height: 300px;
        grid-area: var(--gridArea);
        border-radius: var(--border-radius-out);
        animation: revealProduct linear both;
        animation-timeline: view();
        animation-range: entry 15% cover 20%;
        overflow: hidden;

        &:hover > img {
            scale: 1.1;
            filter: brightness(0.5);
        }

        &:hover > div {
            bottom: 0;
        }

        &:hover > div > p {
            height: auto;
        }
    }

    article > img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        filter: brightness(0.6);
        transition:
            scale 0.3s ease-in-out,
            filter 0.3s ease-in-out;
    }

    article > div {
        padding: 1rem;
        width: 100%;
        position: absolute;
        bottom: -0.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        color: var(--neutral-50);
        transition: bottom 0.2s ease-in-out;
    }

    article > div > p {
        height: 0;
        overflow: hidden;
        transition: height 0.2s ease-in-out;
    }

    @keyframes revealProduct {
        from {
            opacity: 0;
            transform: translateY(50%);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media screen and (width <= 520px) {
        article {
            aspect-ratio: 4 / 3;
            min-height: auto;
        }
    }
</style>
