---
import { getStaffImage } from "@scripts/handleOurTeamCard";
import Image from "astro/components/Image.astro";

type Props = {
    index: number;
    id: string;
    name: string;
    role: string;
    gridArea: string;
};

const { index, id, name, role, gridArea } = Astro.props;
---

<article class="article-container">
    <Image src={getStaffImage("notImage")} alt={`Foto de ${name}`} />
    <div>
        <h6>{name}</h6>
        <p>{role}</p>
    </div>
</article>

<style define:vars={{ index, gridArea }}>
    article {
        padding: 1rem;
        border-radius: var(--border-radius-out);
        overflow: hidden;
        position: relative;
        color: var(--neutral-50);
        grid-area: var(--gridArea);
    }

    article > img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        scale: 1.05;
        transition:
            scale 0.3s ease-in-out,
            filter 0.3s ease-in-out;
    }

    article:hover > img {
        scale: 1;
        filter: brightness(0.6);
    }

    article > div {
        position: absolute;
        bottom: -100%;
        width: calc(100% - 2rem);
        border-radius: var(--border-radius-in);
        padding: 0.5rem;
        transition: bottom 0.3s ease-in-out;
        z-index: 1;
    }

    article > div::before {
        content: "";
        position: absolute;
        inset: 0;
        background-color: var(--glass-color);
        backdrop-filter: var(--blur-effect);
        z-index: -1;
        border-radius: inherit;
    }

    article:hover > div {
        bottom: 1rem;
    }

    article > div > p {
        font-size: 0.875rem;
    }

    @media screen and (width > 1024px) {
        article {
            animation: scaleShift 2.5s infinite alternate calc(var(--index) * 0.5s) ease-in-out;
        }

        article:hover {
            animation-play-state: paused;
        }

        @keyframes scaleShift {
            to {
                scale: 1.05;
            }
        }
    }

    @media screen and (width <= 1024px) {
        article {
            min-height: 300px;
            animation: revealTeamCard linear both;
            animation-timeline: view();
            animation-range: entry 15% cover 20%;
        }

        @keyframes revealTeamCard {
            from {
                opacity: 0;
                transform: translateY(50%);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    }

    @media screen and (width <= 480px) {
        article {
            aspect-ratio: 1 / 1;
            min-height: auto;
        }
    }
</style>
